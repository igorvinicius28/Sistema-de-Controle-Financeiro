@model PrototipoLogin.Models.Usuario.DtoCadastro

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/Scripts/utilitário/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/Home/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    @using (Html.BeginForm())
    {
         @Html.AntiForgeryToken()
    <div class="container"> 
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(n => n.Nome, new { @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(n => n.Nome) })
                                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(n => n.Sobrenome, new { @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(n => n.Sobrenome) })
                                        @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(e => e.Email, new { @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(e => e.Email) })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.PasswordFor(p => p.Password, new { @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(p => p.Password) })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control form-control-user", @placeholder = Html.DisplayNameFor(p => p.ConfirmPassword) })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <input type="submit" value="Cadastrar" class="btn btn-primary btn-user btn-block" />

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Esqueceu a Senha?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Login", "Autenticacao")">Tudo pronto! ja tenho uma conta</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    }
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

    </body>

</html>












