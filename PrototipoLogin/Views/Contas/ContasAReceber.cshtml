@model  List<PrototipoLogin.Models.Contas.DtoContasAPagarReceber>
@{
    ViewBag.Title = "Cadastro de movimentacoes de contas a receber";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<link href="~/Content/Util/dataTable.css" rel="stylesheet">

<h2>@ViewBag.Title.</h2>

@Html.AntiForgeryToken()


<fieldset>
    <hr />
    <!-- PESQUISA -->
    <div class="form-inline well rowBotaoCabecalho">

        <!--Novo Pedido-->
        <a href="#" class="btn btn-info" id="btnNovaContaAhReceber" style="margin-bottom: 10px;">
            <i class="fa fa-money"></i> Novo Pedido
        </a>
        <!--
            <!-- <label for="busca" class="col-md-1" style="margin-top: 10px !important;"></label>
        <input type="text" id="nome" name="nome" class="form-control" />

        <a href="#" id="buscaPedido" title="Buscar Pedidos" class="btn btn-info"><i class="fa fa-search"></i> Buscar</a>
        -->
    </div>

</fieldset>


<table class="table table-striped table-bordered" id="minhaTabela">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Data Pagamento</th>
            <th>Status</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descricao</td>
                <td>@item.DataDoPagamento</td>
                @if (@item.FoiPagaOuRecebida)
                {
                    <td>Pago</td>
                }
                else
                {
                    <td>Pendente</td>
                }

                <td>@item.Valor</td>
                <td class="text-center">
                    <a href="javascript:void(0);" onclick='movimentacoes.editarConta("@item.Id", "@item.Descricao", "@item.DataDoPagamento", "@item.Valor", "@item.Tipo", "@item.FoiPagaOuRecebida");' id="moviEditar"><i class="fa fa-edit"></i></a>
                    <a href="javascript:void(0);" onclick='movimentacoes.excluirsConta(@item.Id);'><i class="fa fa-window-close"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
            <div class="modal-footer">

                <a href="#" onclick="movimentacoes.salvarConta();" class="btn btn-success">Salvar Movimentação</a>
                <a href="#" onclick="movimentacoes.cancelar();" class="btn btn-primary">Fechar</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title2"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body2">
            </div>
            <div class="modal-footer">

                <a href="#" onclick="movimentacoes.excluirConta();" class="btn btn-success">Excluir</a>
                <a href="#" onclick="movimentacoes.cancelar();" class="btn btn-primary">Fechar</a>
            </div>
        </div>
    </div>
</div>