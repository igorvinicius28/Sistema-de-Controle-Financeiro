
@model  List<PrototipoLogin.Models.Contas.DtoContasAPagarReceber>
@{
    ViewBag.Title = "Cadastro de contas a receber";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@Html.Hidden("tipo", "AhReceber");
<link href="~/Content/Util/dataTable.css" rel="stylesheet">

<h2>@ViewBag.Title.</h2>

@Html.AntiForgeryToken()


<fieldset>
    <hr />
    <div class="form-inline well rowBotaoCabecalho">
        <a href="#" class="btn btn-info" id="btnNovaContaAhReceber" style="margin-bottom: 10px;">
            <i class="fa fa-money"></i> Nova movimentação
        </a>
    </div>

</fieldset>

<table id="TabelaContas" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Descricao</th>
            <th>DataCadastro</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
            <div class="modal-footer">

                <a href="#" onclick="conta.salvarConta();" class="btn btn-success">Salvar Movimentação</a>
                <a href="#" onclick="conta.cancelar();" class="btn btn-primary">Fechar</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title2"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body2">
            </div>
            <div class="modal-footer">

                <a href="#" onclick="conta.Delete();" class="btn btn-success">Excluir</a>
                <a href="#" onclick="conta.cancelar();" class="btn btn-primary">Fechar</a>
            </div>
        </div>
    </div>
</div>