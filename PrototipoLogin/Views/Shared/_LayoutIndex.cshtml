        <script>
            var tipo = $("#tipo").val();
            var url = "/Movimentacoes/ObtenhaListaEntrada";

            if (tipo == "Saida") {
                url = "/Movimentacoes/ObtenhaListaSaida";
            }

            var Popup, dataTable;
            $(document).ready(function () {
                dataTable = $("#minhaTabela").DataTable({
                    "scrollY": "200px",
                    "scrollCollapse": true,
                    "paging": false,

                    "ajax": {
                        "url": url,
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "Descricao" },
                        { "data": "DataCadastro" },
                        { "data": "Valor" },
                        {
                            "data": "Id", "render": function (data) {
                                return "<a class='btn btn-default btn-sm' onclick=movimentacoes.editar(" + data + ")><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=movimentacoes.DeleteModal(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                            },
                            "orderable": false,
                            "searchable": false,
                        }
                    ],
                });
            });

            var tipo = $("#tipo").val();
            var urlConta = "/Contas/ObtenhaListaContasAhReceber";
            if (tipo == "AHPAGAR") {
                urlConta = "/Contas/ObtenhaListaContasAhPagar";
            }

            var Popup, dataTableConta;
